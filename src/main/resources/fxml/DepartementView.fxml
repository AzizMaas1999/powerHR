<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tn.esprit.powerHr.controllers.DepartementController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="searchField" promptText="Search dÃ©partements..." HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Form -->
    <GridPane hgap="10" vgap="10">
        <TextField fx:id="nomField" promptText="Nom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <TextField fx:id="descriptionField" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <ComboBox fx:id="entrepriseComboBox" promptText="Select Entreprise" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label text="Entreprise:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#handleAdd"/>
        <Button text="Modifier" onAction="#handleUpdate"/>
        <Button text="Supprimer" onAction="#handleDelete"/>
    </HBox>

    <!-- Table -->
    <TableView fx:id="departementTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nomColumn" text="Nom"/>
            <TableColumn fx:id="descriptionColumn" text="Description"/>
        </columns>
    </TableView>
</VBox> 