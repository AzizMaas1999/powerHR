    <VBox layoutX="208.0" layoutY="105.0" prefHeight="483.0" prefWidth="250.0" spacing="30">
        <Text style="-fx-font-size: 18; -fx-fill: #2d3436; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, white, 2, 0, 0, 1);" />

