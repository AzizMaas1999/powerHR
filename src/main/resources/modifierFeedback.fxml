<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="480.0" prefWidth="891.0" style="-fx-background-color: #FFFFFF;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.powerHR.controllers.UpdateFeedback">

   <!-- En-tête avec Logo -->
   <AnchorPane prefHeight="105.0" prefWidth="1200.0" style="-fx-background-color: #292e30;">
      <children>
         <ImageView fitHeight="147.0" fitWidth="160.0" layoutX="22.0" layoutY="-43.0"
                    pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="images/Logo.png.png"/>
            </image>
         </ImageView>
      </children>
   </AnchorPane>
   <!-- Menu latéral -->
   <AnchorPane layoutY="105.0" prefHeight="422.0" prefWidth="198.0" style="-fx-background-color: #56aeff;">
      <children>
         <Button fx:id="bt_ajouterfeedback"
                 layoutX="4.0" layoutY="6.0"
                 onAction="#NavigateAjout"
                 prefHeight="39.0" prefWidth="189.0"
                 style="-fx-background-color: #56aeff; -fx-border-color: #292e30; -fx-border-radius: 5;"
                 text="Ajouter Feedback"
                 textFill="WHITE"/>

         <Button fx:id="bt_modiferfeedback"
                 layoutX="4.0" layoutY="58.0"
                 prefHeight="39.0" prefWidth="189.0"
                 style="-fx-background-color: #56aeff; -fx-border-color: #292e30; -fx-border-radius: 5;"
                 text="Modifier Feedback"
                 textFill="WHITE"/>

         <Button fx:id="bt_supppfeedback"
                 layoutX="4.0" layoutY="110.0"
                 prefHeight="39.0" prefWidth="189.0"
                 style="-fx-background-color: #56aeff; -fx-border-color: #292e30; -fx-border-radius: 5;"
                 text="Supprimer Feedback"
                 textFill="WHITE"/>
      </children>
   </AnchorPane>

   <!-- Zone principale : formulaire de modification -->
   <VBox layoutX="250.0" layoutY="105.0" spacing="20">
      <HBox spacing="10">
         <!-- DatePicker désactivé pour empêcher la modification -->
         <DatePicker fx:id="Date_creation" prefWidth="150.0" promptText="Date Creation"
                     style="-fx-background-color: #FFFFFF; -fx-border-color: #292e30; -fx-border-radius: 7;" disable="true"/>
         <TextField fx:id="Description" prefWidth="300.0" promptText="Modifier la description"
                    style="-fx-background-color: #FFFFFF; -fx-border-color: #292e30; -fx-border-radius: 7;"/>
         <ChoiceBox fx:id="type" prefWidth="150.0"/>
         <Button fx:id="bt_submit" onAction="#ModifFeedBack"
                 style="-fx-background-color: #56aeff; -fx-text-fill: white; -fx-font-weight: bold;"
                 text="Modifier"/>
      </HBox>
      <!-- Optionnel : Liste des feedbacks pour visualisation -->
      <ListView fx:id="lv_ShowFeedback" prefHeight="200.0" prefWidth="600.0" onMouseClicked="#ChooseLine"/>
   </VBox>

   <!-- Étiquettes -->
   <Text layoutX="257.0" layoutY="129.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date de creation: "/>
   <Text layoutX="257.0" layoutY="222.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Description:"/>
   <Text layoutX="257.0" layoutY="325.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Type:"/>
</AnchorPane>
